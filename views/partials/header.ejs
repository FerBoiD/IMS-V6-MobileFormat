</div>
</nav>
<nav>
    <% if(message && message.length>0){ %>
        <div class="alert alert-success text-center" role="alert" style="background-color: rgba(128, 255, 0, 0.493);">
            <p style="font-family: Verdana, Geneva, Tahoma, sans-serif;font-weight: 600; margin-top: 4.5rem;margin-bottom: 0.5rem;"><%= message%></p>
        </div>
    <% } %>
    <% if(error && error.length>0){ %>
        <div class="alert alert-success text-center" role="alert" style="background-color: rgba(255, 0, 0, 0.521);">
            <p style="font-family: Verdana, Geneva, Tahoma, sans-serif;font-weight: 600; margin-top: 4.5rem;margin-bottom: 0.5rem;"><%= error%></p>
        </div>
    <% } %>
    
</nav>






