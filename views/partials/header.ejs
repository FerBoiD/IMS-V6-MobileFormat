            </li> 
            
            <li class="dropdown">
				<a data-toggle="dropdown" class="nav-link" href="#" style="font-size:21px; color: #ffc451;margin-left: 45px;"><i class="fa fa-search"></i></a> 
				<ul class="dropdown-menu ">
					<li>
                        <form method="GET">
                            <div class="form-group" style="margin-bottom: 0rem;">
                                <input type="text" name="search" placeholder="Search Bike Model" class="form-control searchBar">
                                <button formaction="/cable" class="btn btn_form">Search Cables</button>
                                <button formaction="/indicator" class="btn btn_form">Search Indicator</button>
                            </div>
                        </form>                       
					</li>
				</ul>
            </li>

        </ul>
        <ul class="nav navbar-nav ml-auto">

            
            
            <%if(!currentUser){%>
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
