<%-include("./partials/header")%>

<div class ="container" style="margin-top: 7rem;" >
    <div class="row">
        <h1 style="text-align: center;">Create a new Bike Model</h1>
            <div style="width:30%; margin: 30px auto;" >
                <form action="/editDb" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="model_name" placeholder="Bike Model">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="cluch" min='1' placeholder="Cluch Price">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="break" min='1' placeholder="Break Price">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="accelator" min='1' placeholder="Accelator Price">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="meter" min='1' placeholder="Meter Price">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!!!</button>
                    </div>  
                </form>
                <a href="/" class="btn btn-danger">Go Back!!</a>
            </div>    
        </div>
    </div>
</div>


<%-include("./partials/footer")%>