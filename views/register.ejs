<%-include("./partials/header")%>

<style>
    body{
        background-color: #ffc5516e;
    }
    .row h1{
        font-size: 43px;
        font-family: "Open Sans", sans-serif;
        font-weight: 600;
    }
</style>

<div class ="container" style="margin-top: 10rem;">
    <div class="row">
        <h1 style="text-align: center; ">Create your Personal Account...</h1>
            <div style="width:30%; margin: 30px auto;" >
                <form action="/register" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="phone" placeholder="Phone Number">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="email" placeholder="Email Id">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="address" placeholder="Shipping Address">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit!!!</button>
                    </div>
                </form>
                <a href="/">Go Back!!</a>
            </div>    
        </div>
    </div>
</div>

<%-include("./partials/footer")%>